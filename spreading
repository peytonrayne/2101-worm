
from sys import argv

import os

script=argv
name=str(script[0])

#create variable to start program
cmd = 'start payload.txt'

#use os module for payload
os.system(cmd)

#copy to 'clone' directory
os.mkdir('clone')
os.system(r"copy payload.txt clone")
os.system(r"copy" + name + "clone")
          
